<!-- * Inclusión del header -->
<%- include layouts/header.ejs %>

<div class="container">
    
    <div class="row">
      <h1><%= title %></h1>
        <% for(var libro = 0; libro<Libros.length; libro++) { %>
          <div class="col-sm-3">
            <div class="card">
              <img height="380" src="<%=Libros[libro].imagen %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"> <%=Libros[libro].titulo %> </h5>
                <p class="card-text"> <%=Libros[libro].descripcion %> <br>
                <h5>Precio: $<%=Libros[libro].precio %></h5>
                </p>
                <a href="#" class="btn btn-primary">Comprar</a>
              </div>
            </div>
          </div>
        <% }  %>
    </div>
</div>

<!-- * Inclusión del footer -->
<%- include layouts/footer.ejs %>